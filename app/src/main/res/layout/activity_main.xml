<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.abdelrahman.www.bluetoothtocar.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/main_body"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="room one\n lights"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                    <Switch
                        android:id="@+id/switch_room_one"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textOn="on" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="room three\n lights"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                    <Switch
                        android:id="@+id/switch_room_three"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textOn="on" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Main Door"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                    <Switch
                        android:id="@+id/switch_main_door"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textOn="@string/opened"
                        android:textOff="@string/closed"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="room otwo\n lights"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                    <Switch
                        android:id="@+id/switch_room_two"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textOn="on" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Garage\n lights"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                    <Switch
                        android:id="@+id/switch_Garage_light"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textOn="on" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Garage Door"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                    <Switch
                        android:id="@+id/switch_garage_door"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textOn="@string/opened"
                        android:textOff="@string/closed"/>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/main_body"
                android:layout_marginTop="16dp"
                android:id="@+id/reset_layout"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Restart System"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/reset_layout"
                    android:layout_marginTop="16dp"
                    android:text="reset"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/reset_button"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />


            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/reset_layout"
                android:layout_marginTop="16dp"
                android:text="Connect to Bluetooth Device"
                android:id="@+id/bluetooth_connect_btn"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </ScrollView>
    </RelativeLayout>
